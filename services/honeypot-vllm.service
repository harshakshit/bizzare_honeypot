[Unit]
Description=Honeypot - Fake vLLM
After=network.target

[Service]
User=root
WorkingDirectory=/root
Environment="HONEYPOT_PROFILE=vllm"
# REPLACE with your 'which uvicorn' path
ExecStart=/usr/bin/uvicorn honeypot:app --host 0.0.0.0 --port 8000 --log-level warning
Restart=always

[Install]
WantedBy=multi-user.target
