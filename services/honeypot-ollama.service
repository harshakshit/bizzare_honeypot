[Unit]
Description=Honeypot - Fake Ollama
After=network.target

[Service]
User=root
WorkingDirectory=/root
Environment="HONEYPOT_PROFILE=ollama"
# REPLACE with your 'which uvicorn' path
ExecStart=/usr/bin/uvicorn honeypot:app --host 0.0.0.0 --port 11434 --log-level warning
Restart=always

[Install]
WantedBy=multi-user.target
